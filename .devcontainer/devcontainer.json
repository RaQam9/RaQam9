{
    "name": "Capacitor Codespace",
    "image": "mcr.microsoft.com/devcontainers/universal:2",
    "features": {
        "ghcr.io/devcontainers/features/java:1": {
            "version": "17",
            "installMaven": "false",
            "installGradle": "true"
        }
    },
    "postCreateCommand": "npm install",
    "remoteEnv": {
        "JAVA_HOME": "/usr/lib/jvm/msdk-17"
    },
    "forwardPorts": [
        8100,
        5173
    ]
}
